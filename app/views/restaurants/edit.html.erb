
<%= form_tag "/restaurants/#{@restaurant.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @restaurant.name %><br>
  <%= label_tag :date_opened %>
  <%= text_field_tag :date_opened, @restaurant.date_opened %><br>
  <%= label_tag :style %>
  <%= text_field_tag :style, @restaurant.style %><br>
  <%= submit_tag 'Update Restaurant' %>
<% end %>
